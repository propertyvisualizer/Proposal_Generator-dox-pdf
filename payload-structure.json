/**
 * COMPLETE JSON STRUCTURE FOR PROPOSAL GENERATION
 * 
 * This JSON object contains all necessary information to generate
 * a complete ExposeProfi proposal document.
 */

{
  // ========================================
  // 1. CLIENT INFORMATION (Required)
  // ========================================
  "clientInfo": {
    "companyName": "string",     // Client's company name
    "street": "string",          // Street address
    "postalCode": "string",      // Postal/ZIP code
    "city": "string"             // City name
  },

  // ========================================
  // 2. PROJECT INFORMATION (Required)
  // ========================================
  "projectInfo": {
    "projectName": "string",           // Name of the project (optional)
    "unitCount": "string|number",      // Number of residential units (optional)
    "deliveryDays": "string|number",   // Delivery time in working days
    "offerValidUntil": "string",       // Date format: YYYY-MM-DD or DD.MM.YYYY
    "date": "string",                  // Offer date (DD.MM.YYYY)
    "MM": "string",                    // Month (2 digits, e.g., "11")
    "DD": "string"                     // Day (2 digits, e.g., "06")
  },

  // ========================================
  // 3. SERVICES ARRAY (Required)
  // ========================================
  "services": [
    {
      "name": "string",               // Service name (see SERVICE_TYPES below)
      "quantity": number,             // Number of units
      "unitPrice": "string",          // Price per unit (format: "XX,XX")
      "totalPrice": "string",         // Total service price (format: "XX,XX")
      "description": "string",        // Optional: Description of what's included
      "notes": "string"               // Optional: Additional notes
    }
    // ... more services
  ],

  // ========================================
  // 4. PRICING SUMMARY (Required)
  // ========================================
  "pricing": {
    "totalNetPrice": "string",      // Total net price (format: "X.XXX,XX")
    "totalVat": "string",           // VAT amount (format: "XXX,XX")
    "totalGrossPrice": "string"     // Total gross price (format: "X.XXX,XX")
  },

  // ========================================
  // 5. SIGNATURE (Required)
  // ========================================
  "signature": {
    "signatureName": "string"       // Name of person signing (default: "Christopher Helm")
  },

  // ========================================
  // 6. ADDITIONAL NOTES (Optional)
  // ========================================
  "additionalNotes": {
    "perspectives": ["string"],                    // Array of perspective descriptions
    "specialRequests": ["string"],                 // Array of special requests
    "contactPerson": {
      "name": "string",
      "email": "string",
      "phone": "string"
    }
  }
}

